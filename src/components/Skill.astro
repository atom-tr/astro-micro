---
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'

interface Props {
  icon?: string
  name?: string
  class?: string
  [key: string]: any
}

const { icon, name, class: className, ...rest } = Astro.props
---
<span class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    className,
    'inline-flex items-center justify-center whitespace-nowrap rounded-md border gap-1 px-1'
  )}
   {...rest}
>
{icon && <Icon name={icon} class="size-4" />} {name}
</span>